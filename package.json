{
  "name": "shopping-list",
  "version": "1.0.0",
  "description": "",
  "main": "src/server_traditional.js",
  "scripts": {
    "dev": "nodemon --exec babel-node src/server.js",
    "postinstall": "bash ./post_install.sh",
    "start": "node dist/server.js"
  },
  "keywords": [],
  "author": "Michael Reynolds <michael4reynolds@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.1",
    "express": "^4.13.4"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.5.0",
    "eslint": "^2.11.1",
    "nodemon": "^1.9.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-console": 0,
      "semi": [
        "warn",
        "never"
      ]
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
}
